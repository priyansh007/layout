<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.priyanshzalavadiya.layout.MainActivity"
    android:background="#000"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_alignParentBottom="true"
       android:id="@+id/linearLayout6"
       >
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/but1"
        android:text="BUY SOMETHING NEW CLICK HERE!!!"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#000"
        android:background="#fedd01"
        android:textAlignment="center"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="WELCOME TO"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#000"
            android:background="#fedd01"

            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:foregroundTintMode="src_in"
            android:singleLine="false"
            android:textAlignment="center"
            android:textColorHighlight="#040404"
            android:textIsSelectable="false"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="APPLICATION"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="35dp"
            android:background="#000"
            android:breakStrategy="high_quality"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:foregroundTintMode="src_in"
            android:singleLine="false"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textColor="#fedd01" />



    </LinearLayout>


<LinearLayout
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_above="@+id/linearLayout6"
    android:orientation="vertical"
    android:id="@+id/linearLayout3"
    android:layout_below="@+id/linearLayout2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="10dp"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/two"
        android:scaleType="centerCrop"
        android:id="@+id/one"
        android:layout_weight="1"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_above="@+id/linearLayout6"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout2"

        android:layout_toRightOf="@+id/linearLayout3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="DO YOU"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#fedd01"
            android:background="#000"
            android:backgroundTintMode="multiply"
            android:backgroundTint="#df8b87"
            android:breakStrategy="high_quality"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="WANT"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#000"
            android:background="#fedd01"
            android:backgroundTintMode="multiply"
            android:breakStrategy="high_quality"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="TO TRY?"

            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#fedd01"
            android:background="#000"
            android:backgroundTintMode="multiply"
            android:backgroundTint="#df8b87"
            android:breakStrategy="high_quality"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:textAlignment="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"

        >
        <TextView
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:text="LIVE STRONG"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="#fedd01"
            android:background="#0000"
            android:backgroundTintMode="multiply"
            android:backgroundTint="#df8b87"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:foregroundTintMode="src_in"
            android:singleLine="false"
            android:id="@+id/four"
            android:textAlignment="center"
            android:textColorHighlight="#040404"
            android:textIsSelectable="false"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:text="LIVE LONG"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:background="#fedd01"
            android:backgroundTintMode="multiply"
            android:breakStrategy="high_quality"
            android:contentDescription="welcome to my app"
            android:digits="@string/abc_activity_chooser_view_see_all"
            android:foregroundTintMode="src_in"
            android:textAlignment="center"
            android:textColor="#040404"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout"
            />
    </LinearLayout>




</RelativeLayout>
